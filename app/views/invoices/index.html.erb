<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Total hours</th>
      <th>Total money</th>
      <th>Note</th>
      <th>Date</th>
      <th>Idclient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.total_hours %></td>
        <td><%= invoice.total_money %></td>
        <td><%= invoice.note %></td>
        <td><%= invoice.date %></td>
        <td><%= invoice.IDclient %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

